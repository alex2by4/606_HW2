<%= form_for(@movie, url: movie_path(@movie), method: :patch) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div class="field">
      <%= form.label :rating %>
      <%= form.text_field :rating %>
    </div>
  
    <div class="field">
      <%= form.label :release_date %>
      <%= form.date_field :release_date %>
    </div>
  
    <div class="actions">
      <%= form.submit "Update Movie" %>
    </div>
  <% end %>
  